@model StudentMonitor.TimeTable_3

@{
    ViewBag.Title = "TimeTable3";
}

<h2>TimeTable3</h2>

<div>
    <table id="t03">

        <th>Standard</th>
        <th>Days</th>
        <th>Period 1</th>
        <th>Period 2</th>
        <th>Period 3</th>
        <th>Period 4</th>
        <th>Period 5</th>
        <th>Period 6</th>
        <th>Period 7</th>


        @foreach (var item in ViewBag.timetables)
        {
            <tr>
                <td>@item.Standard</td>
                <td>@item.Days</td>
                <td>@item.Period_1</td>
                <td>@item.Period_2</td>
                <td>@item.Period_3</td>
                <td>@item.Period_4</td>
                <td>@item.Period_5</td>
                <td>@item.Period_6</td>
                <td>@item.Period_7</td>

            </tr>

        }
    </table>
</div>
<style>
    table#t03 {
        width: 100%;
        background-color: #f1f1c1;
    }

        table#t03 tr:nth-child(even) {
            background-color: #eee;
        }

        table#t03 th {
            color: white;
            background-color: blue;
        }

    table, th, td {
        border: 1px solid black;
    }

    table, th, td {
        border: 1px solid black;
        border-collapse: collapes;
    }

    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
    }

    th, td {
        padding: 15px;
    }
</style>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>
